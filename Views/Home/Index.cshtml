<head>

    <!--- basic page needs
    ================================================== -->
    <meta charset="utf-8">
    <title>Abstract</title>
    <meta name="description" content="">
    <meta name="author" content="">

   

</head>

<body id="top">

    @using (Html.BeginForm("Search", "News"))
    {
        <div class="form-group" style="padding-top:150px; padding-left:120px">
            <div class="input-group" style="width:700px;">
                @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", placeholder = "Search by Title, Author or Content" })
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-search"></i>
                </span>
            </div>
        </div>

    }

    <div class="carousel-item active">
        <div class="row">
            @foreach (var news in Model.News)
            {
                <div class="col-md-5">
                    <div class="card" style="transform:scale(0.9); margin:auto;">
                        <div class="card-image">
                            <figure class="img-thumbnail" style="transform:scale(1.3)">
                                <img class="card-image" src="~/Content/css/images/shutterbug.jpg" />
                            </figure>
                        </div>
                        <div class="card-content">
                            <div class="media-content">
                                <h1>@news.Title</h1> <p>@news.Author</p>
                                <p>@news.Content</p>
                                <p>Kategorija: @news.Category.Name</p>
                            </div>

                        </div>
                        <footer class="card-footer">
                            <a href="@Url.Action("Details","News", new {Id = news.Id })" class="button is-link is-rounded is-inverted card-footer-item">Nastavi čitati</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="@Url.Action("Edit","News", new {Id = news.Id })" class="button is-link is-rounded is-inverted card-footer-item">Edit</a>
                            }


                        </footer>

                    </div>
                </div>
            }
        </div>
    </div>





</body>

</html>